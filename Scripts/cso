#
#  Using Scala to run microCSO with the distributed Skija/JWM libraries
#

DIR=GETTINGSTARTED
CP="$DIR/Glyph.jar"
if [ -e  $CP ]
then
  echo Compiled $CP
elif [ -e out/artifacts/Glyph/Glyph.jar ]
then
  CP=out/artifacts/Glyph/Glyph.jar
  echo Artefact $CP
else
  echo "Run Scripts/compile first"
  exit
fi

for file in lib/*.jar
do
 CP=$CP:$file
done

module=${1-test1}
shift

scala -J-Xdock:name=Glyph -cp $CP org.sufrin.microCSO.$module "$@"

echo CP=$CP 
